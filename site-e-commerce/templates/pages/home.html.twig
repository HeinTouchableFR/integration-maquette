{% extends 'base.html.twig' %}

{% block content %}
    <div class="slider" autoplay="auto" duration="5">
        <div class="slider__slides">
            <div class="slider__slides-item">
                <img src="/images/shop-hero-1-product-slide-1.png" alt="shop-hero-1-product-slide-1.png">
                <div class="slider__slides-item-infos">
                    <h3 class="slider__slides-item-infos-category">T-shirt / Tops</h3>
                    <h2 class="slider__slides-item-infos-title">Summer Value Pack</h2>
